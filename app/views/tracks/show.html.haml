%div{:class => "grid justify-items-center mx-96 text-gray-400 border-separate space-y-6 text-sm"}
  %p
    %strong Name:
    = @track.name
  %p
    %strong Url:
    = @track.url
  %p
    %strong Credits:
    = @track.credits
  %p
    %strong Available:
    - if @track.available
      ="Yes"
    - else
      ="No"
  %p
    = audio_tag(rails_blob_url(@track.sound), controls: "controls", type: "track.sound.content_type") if @track.sound.audio?

  = link_to 'Edit', edit_track_path(@track)
  = link_to 'Back', tracks_path